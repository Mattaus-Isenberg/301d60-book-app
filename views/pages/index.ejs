  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Book App</title>
</head>
<body>
  <main>
    <h2>Search By Author or Title</h2>
    <form action="" method="POST">
      <input type="text" name="search" placeholder="Enter a title or author"><input type="text">
      <fieldset class="radio">
        <label for="title">Title</label>
        <input type="radio" name="title" value="title">
      </fieldset>
      <fieldset class="radio">
          <label for="author">Author</label>
          <input type="radio" name="author" value="author">
        </fieldset>
        <button type="submit">Search the Google Books Api</button>
    </form>
  </main>
  
</body>
